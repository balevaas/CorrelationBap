<Window x:Class="BaseView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaseView"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800" 
        WindowStartupLocation="CenterScreen">
   
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="185*"/>
            <ColumnDefinition Width="612*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <StackPanel VerticalAlignment="Top" Grid.Column="0">
            <Label Margin="10,0,10,0" Content="Выбор города:"/>
            <ComboBox Margin="5,0,5,0"
               Name="CityCB" ItemsSource="{Binding Path=StationName}"
               SelectedItem="{Binding Path=SelectStationID}"
               SelectionChanged="CityCB_SelectionChanged"/>
            
            <Label Margin="10,5,10,0" Content="Выбор ПНЗ:"/>
            <ComboBox Margin="5,0,5,0"
              Name="PointCB" ItemsSource="{Binding Path=Points}"
              SelectedItem="{Binding Path=SelectPoint}"
              SelectionChanged="PointCB_SelectionChanged"/>
            <Label Margin="10,5,10,0" Content="Выбор года:"/>
            <ComboBox Margin="5,0,5,0"
              Name="YearCB" ItemsSource="{Binding Path=Year,StringFormat=Y}"
              SelectedItem="{Binding Path=SelectRowYear}"
              SelectionChanged="YearCB_SelectionChanged"/>
            <ComboBox x:Name="MonthCB" Margin="10,50,0,0">
                <ComboBoxItem>
                    <CheckBox Content="Январь"></CheckBox>
                </ComboBoxItem>
                <ComboBoxItem>
                    <CheckBox Content="Февраль"></CheckBox>
                </ComboBoxItem>
                <ComboBoxItem>
                    <CheckBox Content="Март"></CheckBox>
                </ComboBoxItem>
                <ComboBoxItem>
                    <CheckBox Content="Апрель"></CheckBox>
                </ComboBoxItem>
                <ComboBoxItem>
                    <CheckBox Content="Май"></CheckBox>
                </ComboBoxItem>
                <ComboBoxItem>
                    <CheckBox Content="Июнь"></CheckBox>
                </ComboBoxItem>
                <ComboBoxItem>
                    <CheckBox Content="Июль"></CheckBox>
                </ComboBoxItem>
                <ComboBoxItem>
                    <CheckBox Content="Август"></CheckBox>
                </ComboBoxItem>
                <ComboBoxItem>
                    <CheckBox Content="Сентябрь"></CheckBox>
                </ComboBoxItem>
                <ComboBoxItem>
                    <CheckBox Content="Октябрь"></CheckBox>
                </ComboBoxItem>
                <ComboBoxItem>
                    <CheckBox Content="Ноябрь"></CheckBox>
                </ComboBoxItem>
                <ComboBoxItem>
                    <CheckBox Content="Декабрь"></CheckBox>
                </ComboBoxItem>
            </ComboBox>
        </StackPanel>    
       
      

       <Button VerticalAlignment="Top" Margin="10,175,10,0" Content="Выполнить анализ"
               Name="AnalizBtn" Click="AnalizBtn_Click"/>

        <Grid Grid.Column="1" x:Name="UserControlPanel">
            
        </Grid>
        
    
    </Grid>
</Window>
