<Window x:Class="BaseView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaseView"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="850" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ToolBarPanel VerticalAlignment="Top" Grid.Column="0">
            <Label Margin="10,0,10,0" Content="Выберите город:"/>
            <ComboBox Margin="5,0,5,0"
                Name="CityCB" ItemsSource="{Binding Path=StationName}"
                SelectedItem="{Binding Path=SelectStationID}"
                SelectionChanged="CityCB_SelectionChanged"/>

            <Label Name="LabelPoint" Margin="10,5,10,0" Content="Выберите ПНЗА:"/>
            <ComboBox Margin="5,0,5,0"
               Name="PointCB" ItemsSource="{Binding Path=Points}"
               SelectedItem="{Binding Path=SelectPoint}"
               SelectionChanged="PointCB_SelectionChanged"/>

            <Label Name="LabelYear" Margin="10,5,10,0" Content="Выберите год:"/>
            <ComboBox IsEditable="False" Margin="5,0,5,0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="{Binding Year}" IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
                <ComboBox.ItemsSource>
                    <Binding Path="Years" />
                </ComboBox.ItemsSource>
            </ComboBox>

            <Label Name="LabelMonth" Margin="10,5,10,0" Content="Выберите месяц(а):"/>
            <ComboBox IsEditable="False" Margin="5,0,5,0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="{Binding Month}" IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
                <ComboBox.ItemsSource>
                    <Binding Path="testmonth" />
                </ComboBox.ItemsSource>
            </ComboBox>

            <Label Name="LabelInterval" Margin="5,5,5,0" Content="Либо временной промежуток:"/>
            <ItemsControl ItemsSource="{Binding Seasons}" Margin="5,0,5,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <RadioButton Margin="5" Content="{Binding Name}" IsChecked="{Binding SelectedSeason, 
                     RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged}"
                     Checked="RadioButton_Checked"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Margin="10,10,10,0" Content="Выполнить анализ"
                Name="AnalizBtn" Command="{Binding Test}"/>
        </ToolBarPanel>
    </Grid>
</Window>
