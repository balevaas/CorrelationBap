<Window x:Class="BaseView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaseView"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="850" 
        WindowStartupLocation="CenterScreen">
   
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ToolBarPanel VerticalAlignment="Top" Grid.Column="0">
            <Label Margin="10,0,10,0" Content="Выберите город:"/>
            <ComboBox Margin="5,0,5,0"
               Name="CityCB" ItemsSource="{Binding Path=StationName}"
               SelectedItem="{Binding Path=SelectStationID}"
               SelectionChanged="CityCB_SelectionChanged"/>
            
            <Label Name="LabelPoint" Margin="10,5,10,0" Content="Выберите ПНЗА:"/>
            <ComboBox Margin="5,0,5,0"
              Name="PointCB" ItemsSource="{Binding Path=Points}"
              SelectedItem="{Binding Path=SelectPoint}"
              SelectionChanged="PointCB_SelectionChanged"/>

            <Label Name="LabelYear" Margin="10,5,10,0" Content="Выберите год:"/>
            <ComboBox Margin="5,0,5,0" Name="YearCB" SelectionChanged="YearCB_SelectionChanged">
                <ComboBoxItem>
                    <CheckBox Content="2021"></CheckBox>
                </ComboBoxItem>
                <ComboBoxItem>
                    <CheckBox Content="2022"></CheckBox>
                </ComboBoxItem>
            </ComboBox>

            <Label Name="LabelMonth" Margin="10,5,10,0" Content="Выберите месяц(а):"/>
            <ComboBox x:Name="MonthCB" Margin="5,0,5,0">
                <ComboBoxItem>
                    <CheckBox Content="Январь"></CheckBox>
                </ComboBoxItem>
                <ComboBoxItem>
                    <CheckBox Content="Февраль"></CheckBox>
                </ComboBoxItem>
                <ComboBoxItem>
                    <CheckBox Content="Март"></CheckBox>
                </ComboBoxItem>
                <ComboBoxItem>
                    <CheckBox Content="Апрель"></CheckBox>
                </ComboBoxItem>
                <ComboBoxItem>
                    <CheckBox Content="Май"></CheckBox>
                </ComboBoxItem>
                <ComboBoxItem>
                    <CheckBox Content="Июнь"></CheckBox>
                </ComboBoxItem>
                <ComboBoxItem>
                    <CheckBox Content="Июль"></CheckBox>
                </ComboBoxItem>
                <ComboBoxItem>
                    <CheckBox Content="Август"></CheckBox>
                </ComboBoxItem>
                <ComboBoxItem>
                    <CheckBox Content="Сентябрь"></CheckBox>
                </ComboBoxItem>
                <ComboBoxItem>
                    <CheckBox Content="Октябрь"></CheckBox>
                </ComboBoxItem>
                <ComboBoxItem>
                    <CheckBox Content="Ноябрь"></CheckBox>
                </ComboBoxItem>
                <ComboBoxItem>
                    <CheckBox Content="Декабрь"></CheckBox>
                </ComboBoxItem>
            </ComboBox>
            <Grid>
                <Label Name="LabelInterval" Margin="5,5,5,0" Content="Либо временной промежуток:"/>
                <RadioButton Name="WinterRB" Margin="10,30,0,0" HorizontalAlignment="Left" Content="Зима"/>
                <RadioButton Name="SpringRB" Margin="0,30,0,0" HorizontalAlignment="Center" Content="Весна"/>
                <RadioButton Name="SummerRB" Margin="110,30,10,0" HorizontalAlignment="Right" Content="Лето"/>
                <RadioButton Name="AutumnRB" Margin="35,60,0,0" HorizontalAlignment="Left" Content="Осень"/>
                <RadioButton Name="YearRB" Margin="0,60,10,0" HorizontalAlignment="Right" Content="Весь год"/>
            </Grid>            
        </ToolBarPanel>  
        
          
       
      

       <!--<Button VerticalAlignment="Top" Margin="10,175,10,0" Content="Выполнить анализ"
               Name="AnalizBtn" Click="AnalizBtn_Click"/>-->

        <Grid Grid.Column="1" x:Name="UserControlPanel">
            
        </Grid>
        
    
    </Grid>
</Window>
